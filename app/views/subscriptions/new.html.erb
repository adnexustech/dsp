<% content_for :breadcrumb do %>
  <div class="page-title-left">
    <ol class="breadcrumb page-breadcrumb">
      <li><i class="fa fa-home"></i><a href="/">Home</a></li>
      <li><i class="fa fa-angle-right"></i></li>
      <li><a href="/subscriptions">Billing</a></li>
      <li><i class="fa fa-angle-right"></i></li>
      <li class="active">Change Plan</li>
    </ol>
    <div class="page-header">
      <div class="page-title">Choose Your Plan</div>
    </div>
  </div>
  <div class="page-actions">
    <%= link_to 'Back to Billing', subscriptions_path, class: "btn btn-secondary" %>
  </div>
<%end%>

<% content_for :main_body do %>
<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
  
  <!-- Header -->
  <div class="text-center mb-16">
    <h2 class="text-4xl font-bold text-white mb-4">Choose the Perfect Plan</h2>
    <p class="text-xl text-zinc-400">Select the plan that fits your advertising needs</p>
  </div>

  <!-- Pricing Cards - 4 columns on desktop -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-16">
    <% @plans.each_with_index do |(plan_key, plan), index| %>
      <% is_current = @current_plan == plan_key %>
      <% is_popular = plan_key == :pro %>
      
      <div class="relative flex flex-col <%= is_popular ? 'lg:scale-105 lg:z-10' : '' %>">
        <!-- Popular Badge -->
        <% if is_popular %>
          <div class="absolute -top-4 left-0 right-0 flex justify-center">
            <span class="bg-gradient-to-r from-blue-600 to-purple-600 text-white px-4 py-1 rounded-full text-sm font-semibold">
              Most Popular
            </span>
          </div>
        <% end %>

        <!-- Card -->
        <div class="flex-1 bg-zinc-900 border <%= is_current ? 'border-blue-500' : is_popular ? 'border-purple-500' : 'border-zinc-800' %> rounded-2xl p-8 flex flex-col hover:border-zinc-700 transition-all duration-200">
          
          <!-- Header -->
          <div class="mb-8">
            <div class="flex items-center justify-between mb-2">
              <h3 class="text-2xl font-bold text-white"><%= plan[:name] %></h3>
              <% if is_current %>
                <span class="bg-blue-500 text-white px-3 py-1 rounded-full text-xs font-semibold">
                  Current
                </span>
              <% end %>
            </div>
            
            <!-- Price -->
            <div class="mt-4">
              <% if plan_key == :free %>
                <div class="text-5xl font-bold text-white">Free</div>
              <% elsif plan_key == :enterprise %>
                <div class="text-4xl font-bold text-white">Custom</div>
                <div class="text-sm text-zinc-400 mt-2">Contact for pricing</div>
              <% elsif plan[:price] %>
                <div class="flex items-baseline">
                  <span class="text-5xl font-bold text-white">$<%= plan[:price] / 100 %></span>
                  <span class="text-zinc-400 ml-2">/month</span>
                </div>
              <% end %>
            </div>
          </div>

          <!-- Features -->
          <ul class="space-y-4 mb-8 flex-1">
            <% features = plan[:features] %>
            <li class="flex items-start">
              <i class="fa-solid fa-check text-green-500 mt-1 mr-3"></i>
              <span class="text-zinc-300">
                <strong class="text-white"><%= features[:campaigns_limit] || 'Unlimited' %></strong> campaigns
              </span>
            </li>
            <li class="flex items-start">
              <i class="fa-solid fa-check text-green-500 mt-1 mr-3"></i>
              <span class="text-zinc-300">
                <strong class="text-white"><%= features[:banners_limit] || 'Unlimited' %></strong> banners
              </span>
            </li>
            <li class="flex items-start">
              <i class="fa-solid fa-check text-green-500 mt-1 mr-3"></i>
              <span class="text-zinc-300">
                <strong class="text-white"><%= features[:videos_limit] || 'Unlimited' %></strong> videos
              </span>
            </li>
            <li class="flex items-start">
              <i class="fa-solid fa-check text-green-500 mt-1 mr-3"></i>
              <span class="text-zinc-300"><%= features[:support] %> support</span>
            </li>
            <% if features[:whitelabel] %>
              <li class="flex items-start">
                <i class="fa-solid fa-check text-green-500 mt-1 mr-3"></i>
                <span class="text-zinc-300">White label branding</span>
              </li>
            <% end %>
            <% if features[:custom_features] %>
              <li class="flex items-start">
                <i class="fa-solid fa-check text-green-500 mt-1 mr-3"></i>
                <span class="text-zinc-300">Custom features</span>
              </li>
            <% end %>
          </ul>

          <!-- CTA Button -->
          <div class="mt-auto">
            <% if is_current %>
              <button type="button" 
                      disabled
                      class="w-full py-3 px-6 rounded-lg bg-zinc-800 text-zinc-400 font-semibold cursor-not-allowed">
                Current Plan
              </button>
            <% elsif plan_key == :enterprise %>
              <a href="mailto:sales@adnexus.com?subject=Enterprise%20Plan%20Inquiry"
                 class="block w-full py-3 px-6 rounded-lg text-center font-semibold transition-all duration-200
                        bg-gradient-to-r from-blue-600 to-purple-600 text-white
                        hover:from-blue-700 hover:to-purple-700">
                Contact Sales
              </a>
            <% else %>
              <%= button_to "Select #{plan[:name]}",
                  subscriptions_path(plan: plan_key),
                  method: :post,
                  class: "w-full py-3 px-6 rounded-lg font-semibold transition-all duration-200 #{
                    is_popular ? 
                      'bg-gradient-to-r from-blue-600 to-purple-600 text-white hover:from-blue-700 hover:to-purple-700' : 
                      'bg-white text-black hover:bg-zinc-200'
                  }",
                  data: { confirm: plan_key == :free ?
                    "Are you sure you want to downgrade to the Free plan?" :
                    "Subscribe to #{plan[:name]} plan for $#{plan[:price] / 100}/month?" } %>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <!-- Subscription Details -->
  <div class="bg-zinc-900 border border-zinc-800 rounded-2xl p-8 mb-8">
    <h3 class="text-xl font-bold text-white mb-6 flex items-center">
      <i class="fa-solid fa-circle-info text-blue-500 mr-3"></i>
      Subscription Details
    </h3>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div class="flex items-start">
        <i class="fa-solid fa-check text-green-500 mt-1 mr-3"></i>
        <span class="text-zinc-300">14-day free trial on all paid plans</span>
      </div>
      <div class="flex items-start">
        <i class="fa-solid fa-check text-green-500 mt-1 mr-3"></i>
        <span class="text-zinc-300">Cancel anytime - no commitments</span>
      </div>
      <div class="flex items-start">
        <i class="fa-solid fa-check text-green-500 mt-1 mr-3"></i>
        <span class="text-zinc-300">Upgrade or downgrade anytime</span>
      </div>
      <div class="flex items-start">
        <i class="fa-solid fa-lock text-green-500 mt-1 mr-3"></i>
        <span class="text-zinc-300">Secure payment by Stripe</span>
      </div>
      <div class="flex items-start">
        <i class="fa-solid fa-calendar text-green-500 mt-1 mr-3"></i>
        <span class="text-zinc-300">Monthly billing cycle</span>
      </div>
      <div class="flex items-start">
        <i class="fa-solid fa-shield-halved text-green-500 mt-1 mr-3"></i>
        <span class="text-zinc-300">Money-back guarantee</span>
      </div>
    </div>
  </div>

</div>
<%end%>
