<div class="space-y-4">
  <% if errors = @banner.check_errors and errors.length>0
      str = errors.join("<br/>")
  %>
    <div class="flex justify-between border-b border-zinc-800 pb-3">
      <span class="text-zinc-400">Status</span>
      <span class="text-red-500"><%= raw(str) %></span>
    </div>
  <% end %>

  <% if false %>
  <div class="flex justify-between border-b border-zinc-800 pb-3">
    <span class="text-zinc-400">Total Cost</span>
    <span class="font-medium"><%= number_to_currency(@banner.total_cost) %></span>
  </div>
  <div class="flex justify-between border-b border-zinc-800 pb-3">
    <span class="text-zinc-400">Daily Cost</span>
    <span class="font-medium"><%= number_to_currency(@banner.daily_cost) %></span>
  </div>
  <div class="flex justify-between border-b border-zinc-800 pb-3">
    <span class="text-zinc-400">Hourly Cost</span>
    <span class="font-medium"><%= number_to_currency(@banner.hourly_cost) %></span>
  </div>
  <div class="flex justify-between border-b border-zinc-800 pb-3">
    <span class="text-zinc-400">Clicks</span>
    <span class="font-medium"><%= number_with_delimiter(@banner.clicks) %></span>
  </div>
  <div class="flex justify-between border-b border-zinc-800 pb-3">
    <span class="text-zinc-400">Pixels</span>
    <span class="font-medium"><%= number_with_delimiter(@banner.pixels) %></span>
  </div>
  <div class="flex justify-between border-b border-zinc-800 pb-3">
    <span class="text-zinc-400">Wins</span>
    <span class="font-medium"><%= number_with_delimiter(@banner.wins) %></span>
  </div>
  <div class="flex justify-between border-b border-zinc-800 pb-3">
    <span class="text-zinc-400">Bids</span>
    <span class="font-medium"><%= number_with_delimiter(@banner.bids) %></span>
  </div>
  <% end %>
  
  <div class="flex justify-between border-b border-zinc-800 pb-3">
    <span class="text-zinc-400">Last Updated</span>
    <span class="text-sm"><%= @banner.updated_at.strftime('%B %d, %Y %I:%M %p') %></span>
  </div>
  <div class="flex justify-between">
    <span class="text-zinc-400">Created</span>
    <span class="text-sm"><%= @banner.created_at.strftime('%B %d, %Y %I:%M %p') %></span>
  </div>
</div>
