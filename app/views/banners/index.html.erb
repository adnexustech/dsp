<% content_for :breadcrumb do %>
  <div class="page-title-left">
    <ol class="breadcrumb page-breadcrumb">
      <li><i class="fa fa-home"></i><a href="/">Home</a></li>
      <li><i class="fa fa-angle-right"></i></li>
      <li class="active">Banners</li>
    </ol>
    <div class="page-header">
      <div class="page-title">Banners</div>
    </div>
  </div>
  <div class="page-actions">
    <%= link_to 'New Banner', new_banner_path, class: "px-4 py-2 bg-white text-black rounded-lg font-medium hover:bg-gray-200 transition-colors" %>
  </div>
<%end%>

<% content_for :main_body do %>
  <style>a:focus { color: green !important; }</style>
  
  <table class="table table-striped table-hover" id="listtable">
    <thead>
      <tr>
        <th>ID</th>
        <th>Banner Name</th>
        <th>Status</th>
        <th>Campaigns</th>
        <th>Exchanges</th>
        <th width="3%"></th>
        <th width="3%"></th>
        <th width="3%"></th>
      </tr>
    </thead>
    <tbody>
      <% @banners.each do |banner| %>
        <tr>
          <td><%= banner.id %></td>
          <td><%= banner.name %></td>
          <td>
            <% if errors = banner.check_errors and errors.length > 0
                str = errors.join("<br/>")
            %>
              <span class="text text-danger"><%= raw(str) %></span>
            <% end %>
          </td>
          <td>
            <% if banner.campaign %>
              <%= banner.campaign.name %>
              (<%= link_to "ID #{banner.campaign.id}", edit_campaign_path(banner.campaign) %>)
            <% end %>
          </td>
          <td>
            <%= raw(banner.campaign.exchanges.split(",").collect{|e| e.camelize}.join("<br/>")) if banner.campaign and banner.campaign.exchanges %>
          </td>
          <td><%= link_to 'Show', banner, class: "text-sm text-zinc-400 hover:text-white transition-colors" %></td>
          <td><%= link_to 'Edit', edit_banner_path(banner), class: "text-sm text-blue-500 hover:text-blue-400 transition-colors" %></td>
          <td><%= link_to 'Destroy', banner, method: :delete, data: { confirm: 'Are you sure?' }, class: "text-sm text-red-500 hover:text-red-400 transition-colors" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
<%end%>
