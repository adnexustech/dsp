<% content_for :breadcrumb do %> 
        <div class="page-header pull-left">
            <div class="page-title">
                Help Documentation </div>
        </div>
        <ol class="breadcrumb page-breadcrumb pull-right">
            <li><i class="fa fa-home"></i>&nbsp;<a href="/">Home</a>&nbsp;&nbsp;<i class="fa fa-angle-right"></i>&nbsp;&nbsp;</li>
            <li class="active">Documentation</li>
        </ol>
<%end%>

<% content_for :main_body do %>

      <%= form_tag help_list_path, method: :get, class: "mb-4 p-4 bg-zinc-900 border border-zinc-700 rounded-lg" do %>
         <div class="flex items-center gap-6">
           <label class="text-sm font-medium text-zinc-300">Sort by:</label>
           <% checked = {}; checked[@sort.to_s] = true %>
           <label class="flex items-center space-x-2 cursor-pointer">
             <%= radio_button_tag :sort, :category, checked["category"], class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-zinc-600" %>
             <span class="text-sm text-zinc-300">Category</span>
           </label>
           <label class="flex items-center space-x-2 cursor-pointer">
             <%= radio_button_tag :sort, :document, checked["document"], class: "h-4 w-4 text-blue-600 focus:ring-blue-500 border-zinc-600" %>
             <span class="text-sm text-zinc-300">Document</span>
           </label>
           <%= submit_tag "Apply", class: "px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white text-sm font-medium rounded-lg transition-colors" %>
         </div>
      <% end %>

      <table class="table table-striped table-hover ">
        <thead>
          <tr >
            <th>Category</th>
            <th>Documents</th>
            <th>Description</th>
            <th colspan="2" width="10%"></th>
          </tr>
        </thead>
        <tbody>
          <% if @categories %>
            <% @categories.each do |category| %>
              <% category.documents.each do |document| %>
                <tr>
                  <td><%=category.name%></td>
                  <td>
                      <%= link_to document.name, help_open_url(:id=>document.id)%>
                  </td>
                  <td><%=document.description %></td>
                </tr>
              <%end%>
            <% end %>
          <% end %>
          <% if @documents %>
            <% @documents.each do |document| %>
              <% document.categories.each do |category| %>
                <tr>
                  <td><%=category.name%></td>
                  <td>
                      <%= link_to document.name, help_open_path(:id=>document.id)%>
                  </td>
                  <td><%=document.description %></td>
                </tr>
              <%end%>
            <% end %>
          <% end %>          
          
        </tbody>
      </table>
      

      
<%end%>