<% content_for :breadcrumb do %>
  <div class="page-title-left">
    <ol class="breadcrumb page-breadcrumb">
      <li><i class="fa fa-home"></i><a href="/">Home</a></li>
      <li><i class="fa fa-angle-right"></i></li>
      <li class="active">Organization Settings</li>
    </ol>
    <div class="page-header">
      <div class="page-title">Organization Settings</div>
    </div>
  </div>
<%end%>

<% content_for :main_body do %>
  <div class="max-w-7xl mx-auto">
    <!-- Branding Card -->
    <div class="bg-zinc-900 border border-zinc-800 rounded-xl p-6 mb-6">
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-xl font-semibold">Branding & Logo</h2>
        <button type="button" id="editBrandingBtn" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 text-sm">
          <i class="fa fa-pencil mr-2"></i>Edit
        </button>
      </div>

      <%= form_with model: @organization, url: organization_path, method: :patch, id: 'brandingForm', class: 'space-y-6', multipart: true do |f| %>
        <!-- Logo Upload -->
        <div>
          <label class="block text-sm font-medium text-zinc-400 mb-3">Organization Logo</label>
          <div class="flex items-start gap-6">
            <!-- Current Logo Preview -->
            <div class="flex-shrink-0">
              <div id="logoPreview" style="width: 120px; height: 120px; border-radius: 12px; overflow: hidden; border: 2px solid #27272a; background: linear-gradient(135deg, <%= @organization.brand_primary_color %>, <%= @organization.brand_secondary_color %>); display: flex; align-items: center; justify-content: center;">
                <% if @organization.logo.attached? %>
                  <%= image_tag @organization.logo, style: "width: 100%; height: 100%; object-fit: cover;" %>
                <% else %>
                  <span style="font-size: 36px; font-weight: 600; color: white;"><%= @organization.initials %></span>
                <% end %>
              </div>
            </div>

            <!-- Upload Controls -->
            <div class="flex-1">
              <div id="logoUploadSection" class="hidden">
                <%= f.file_field :logo, 
                    accept: "image/*",
                    class: "w-full px-4 py-2 bg-zinc-800 border border-zinc-700 rounded-lg text-white file:mr-4 file:py-2 file:px-4 file:rounded-lg file:border-0 file:text-sm file:font-semibold file:bg-blue-600 file:text-white hover:file:bg-blue-700 cursor-pointer",
                    id: 'logoInput',
                    onchange: "previewLogo(event)" %>
                <p class="mt-2 text-xs text-zinc-500">Recommended: Square image, at least 200x200px. PNG, JPG or SVG.</p>
              </div>
              <div id="logoCurrentInfo" class="text-sm text-zinc-400">
                <% if @organization.logo.attached? %>
                  <p><i class="fa fa-check-circle text-green-500 mr-2"></i>Custom logo uploaded</p>
                <% else %>
                  <p><i class="fa fa-info-circle text-blue-500 mr-2"></i>Using default initials badge</p>
                <% end %>
              </div>
            </div>
          </div>
        </div>

        <!-- Brand Colors -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
          <div>
            <label class="block text-sm font-medium text-zinc-400 mb-3">Primary Color</label>
            <div class="flex items-center gap-3">
              <%= f.color_field :primary_color, 
                  value: @organization.brand_primary_color,
                  class: "h-12 w-20 rounded-lg cursor-pointer border border-zinc-700",
                  disabled: true,
                  id: 'primaryColorInput' %>
              <%= f.text_field :primary_color, 
                  value: @organization.brand_primary_color,
                  placeholder: "#3b82f6",
                  class: "flex-1 px-4 py-2 bg-zinc-800 border border-zinc-700 rounded-lg text-white focus:border-blue-500 focus:outline-none font-mono",
                  disabled: true,
                  id: 'primaryColorText',
                  pattern: "^#[0-9A-Fa-f]{6}$" %>
            </div>
            <p class="mt-2 text-xs text-zinc-500">Used for primary branding elements</p>
          </div>

          <div>
            <label class="block text-sm font-medium text-zinc-400 mb-3">Secondary Color</label>
            <div class="flex items-center gap-3">
              <%= f.color_field :secondary_color, 
                  value: @organization.brand_secondary_color,
                  class: "h-12 w-20 rounded-lg cursor-pointer border border-zinc-700",
                  disabled: true,
                  id: 'secondaryColorInput' %>
              <%= f.text_field :secondary_color, 
                  value: @organization.brand_secondary_color,
                  placeholder: "#8b5cf6",
                  class: "flex-1 px-4 py-2 bg-zinc-800 border border-zinc-700 rounded-lg text-white focus:border-blue-500 focus:outline-none font-mono",
                  disabled: true,
                  id: 'secondaryColorText',
                  pattern: "^#[0-9A-Fa-f]{6}$" %>
            </div>
            <p class="mt-2 text-xs text-zinc-500">Used for gradients and accents</p>
          </div>
        </div>

        <div id="brandingFormActions" class="hidden">
          <%= f.submit "Save Branding", class: "px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 text-sm" %>
          <button type="button" id="cancelBrandingBtn" class="px-4 py-2 bg-zinc-700 text-white rounded-lg hover:bg-zinc-600 text-sm ml-2">
            Cancel
          </button>
        </div>
      <% end %>
    </div>

    <!-- Organization Info Card -->
    <div class="bg-zinc-900 border border-zinc-800 rounded-xl p-6 mb-6">
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-xl font-semibold">Organization Information</h2>
        <button type="button" id="editOrgBtn" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 text-sm">
          <i class="fa fa-pencil mr-2"></i>Edit
        </button>
      </div>

      <%= form_with model: @organization, url: organization_path, method: :patch, id: 'orgForm', class: 'space-y-4' do |f| %>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-medium text-zinc-400 mb-2">Organization Name</label>
            <%= f.text_field :name, 
                class: "w-full px-4 py-2 bg-zinc-800 border border-zinc-700 rounded-lg text-white focus:border-blue-500 focus:outline-none",
                disabled: true,
                id: 'orgNameInput' %>
          </div>

          <div>
            <label class="block text-sm font-medium text-zinc-400 mb-2">Organization Slug</label>
            <%= f.text_field :slug, 
                class: "w-full px-4 py-2 bg-zinc-800 border border-zinc-700 rounded-lg text-white focus:border-blue-500 focus:outline-none",
                disabled: true,
                id: 'orgSlugInput' %>
          </div>
        </div>

        <div id="orgFormActions" class="hidden">
          <%= f.submit "Save Changes", class: "px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 text-sm" %>
          <button type="button" id="cancelOrgBtn" class="px-4 py-2 bg-zinc-700 text-white rounded-lg hover:bg-zinc-600 text-sm ml-2">
            Cancel
          </button>
        </div>
      <% end %>
    </div>

    <!-- Subscription Info Card -->
    <div class="bg-zinc-900 border border-zinc-800 rounded-xl p-6 mb-6">
      <h2 class="text-xl font-semibold mb-6">Subscription & Billing</h2>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
        <div class="bg-zinc-800 rounded-lg p-4">
          <div class="text-sm text-zinc-400 mb-1">Current Plan</div>
          <div class="text-2xl font-semibold text-white">
            <%= @organization.subscription_plan&.titleize || 'Free' %>
          </div>
        </div>

        <div class="bg-zinc-800 rounded-lg p-4">
          <div class="text-sm text-zinc-400 mb-1">Status</div>
          <div class="text-2xl font-semibold">
            <% if @organization.active_subscription? %>
              <span class="text-green-500">Active</span>
            <% else %>
              <span class="text-zinc-400"><%= @organization.subscription_status&.titleize || 'N/A' %></span>
            <% end %>
          </div>
        </div>

        <div class="bg-zinc-800 rounded-lg p-4">
          <div class="text-sm text-zinc-400 mb-1">Credits Balance</div>
          <div class="text-2xl font-semibold text-green-500">
            $<%= number_with_precision(@organization.credits_balance, precision: 2) %>
          </div>
        </div>
      </div>

      <div class="flex gap-4">
        <%= link_to subscriptions_path, class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 text-sm" do %>
          <i class="fa fa-credit-card mr-2"></i>Manage Subscription
        <% end %>

        <%= link_to credits_path, class: "px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 text-sm" do %>
          <i class="fa fa-dollar-sign mr-2"></i>Add Credits
        <% end %>
      </div>
    </div>

    <!-- Members Card -->
    <div class="bg-zinc-900 border border-zinc-800 rounded-xl p-6">
      <div class="flex justify-between items-center mb-6">
        <h2 class="text-xl font-semibold">Organization Members</h2>
        <button type="button" id="addMemberBtn" class="px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700 text-sm">
          <i class="fa fa-user-plus mr-2"></i>Add Member
        </button>
      </div>

      <!-- Add Member Form (Hidden by default) -->
      <div id="addMemberForm" class="hidden bg-zinc-800 rounded-lg p-4 mb-6">
        <%= form_with url: add_member_organization_path, method: :post, class: 'space-y-4' do |f| %>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            <div class="md:col-span-2">
              <%= f.email_field :email, 
                  placeholder: "member@example.com",
                  class: "w-full px-4 py-2 bg-zinc-700 border border-zinc-600 rounded-lg text-white focus:border-blue-500 focus:outline-none",
                  required: true %>
            </div>

            <div>
              <%= f.select :role, 
                  [['Member', 'member'], ['Admin', 'admin']], 
                  {},
                  class: "w-full px-4 py-2 bg-zinc-700 border border-zinc-600 rounded-lg text-white focus:border-blue-500 focus:outline-none" %>
            </div>
          </div>

          <div class="flex gap-2">
            <%= f.submit "Add Member", class: "px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 text-sm" %>
            <button type="button" id="cancelAddMemberBtn" class="px-4 py-2 bg-zinc-700 text-white rounded-lg hover:bg-zinc-600 text-sm">
              Cancel
            </button>
          </div>
        <% end %>
      </div>

      <!-- Members List -->
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead>
            <tr class="border-b border-zinc-800">
              <th class="text-left py-3 px-4 text-sm font-semibold text-zinc-400">Name</th>
              <th class="text-left py-3 px-4 text-sm font-semibold text-zinc-400">Email</th>
              <th class="text-left py-3 px-4 text-sm font-semibold text-zinc-400">Role</th>
              <th class="text-right py-3 px-4 text-sm font-semibold text-zinc-400">Actions</th>
            </tr>
          </thead>
          <tbody>
            <% @members.each do |member| %>
              <tr class="border-b border-zinc-800 hover:bg-zinc-800">
                <td class="py-3 px-4 text-sm"><%= member.user.name || 'N/A' %></td>
                <td class="py-3 px-4 text-sm"><%= member.user.email %></td>
                <td class="py-3 px-4 text-sm">
                  <span class="px-2 py-1 rounded-full text-xs font-semibold
                    <%= member.owner? ? 'bg-purple-900 text-purple-200' : 
                        member.admin? ? 'bg-blue-900 text-blue-200' : 
                        'bg-zinc-700 text-zinc-300' %>">
                    <%= member.role.titleize %>
                  </span>
                </td>
                <td class="py-3 px-4 text-sm text-right">
                  <% unless member.owner? %>
                    <%= button_to remove_member_organization_path(user_id: member.user.id), 
                        method: :delete,
                        data: { confirm: "Remove #{member.user.email} from organization?" },
                        class: "px-3 py-1.5 bg-red-600 text-white rounded-lg hover:bg-red-700 text-xs" do %>
                      <i class="fa fa-trash mr-1"></i>Remove
                    <% end %>
                  <% end %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <script>
    // Logo Preview Function
    function previewLogo(event) {
      const file = event.target.files[0];
      if (file) {
        const reader = new FileReader();
        reader.onload = function(e) {
          const preview = document.getElementById('logoPreview');
          preview.innerHTML = '<img src="' + e.target.result + '" style="width: 100%; height: 100%; object-fit: cover;">';
        };
        reader.readAsDataURL(file);
      }
    }

    // Sync color picker with text input
    document.addEventListener('DOMContentLoaded', function() {
      const primaryColorInput = document.getElementById('primaryColorInput');
      const primaryColorText = document.getElementById('primaryColorText');
      const secondaryColorInput = document.getElementById('secondaryColorInput');
      const secondaryColorText = document.getElementById('secondaryColorText');

      if (primaryColorInput && primaryColorText) {
        primaryColorInput.addEventListener('input', function() {
          primaryColorText.value = this.value;
        });
        primaryColorText.addEventListener('input', function() {
          if (/^#[0-9A-Fa-f]{6}$/.test(this.value)) {
            primaryColorInput.value = this.value;
          }
        });
      }

      if (secondaryColorInput && secondaryColorText) {
        secondaryColorInput.addEventListener('input', function() {
          secondaryColorText.value = this.value;
        });
        secondaryColorText.addEventListener('input', function() {
          if (/^#[0-9A-Fa-f]{6}$/.test(this.value)) {
            secondaryColorInput.value = this.value;
          }
        });
      }
    });

    // Edit Branding Button
    document.getElementById('editBrandingBtn').addEventListener('click', function() {
      document.getElementById('logoUploadSection').classList.remove('hidden');
      document.getElementById('logoCurrentInfo').classList.add('hidden');
      document.getElementById('primaryColorInput').disabled = false;
      document.getElementById('primaryColorText').disabled = false;
      document.getElementById('secondaryColorInput').disabled = false;
      document.getElementById('secondaryColorText').disabled = false;
      document.getElementById('brandingFormActions').classList.remove('hidden');
      this.classList.add('hidden');
    });

    document.getElementById('cancelBrandingBtn').addEventListener('click', function() {
      document.getElementById('logoUploadSection').classList.add('hidden');
      document.getElementById('logoCurrentInfo').classList.remove('hidden');
      document.getElementById('primaryColorInput').disabled = true;
      document.getElementById('primaryColorText').disabled = true;
      document.getElementById('secondaryColorInput').disabled = true;
      document.getElementById('secondaryColorText').disabled = true;
      document.getElementById('brandingFormActions').classList.add('hidden');
      document.getElementById('editBrandingBtn').classList.remove('hidden');
      location.reload(); // Reload to reset form
    });

    // Edit Organization Button
    document.getElementById('editOrgBtn').addEventListener('click', function() {
      document.getElementById('orgNameInput').disabled = false;
      document.getElementById('orgSlugInput').disabled = false;
      document.getElementById('orgFormActions').classList.remove('hidden');
      this.classList.add('hidden');
    });

    document.getElementById('cancelOrgBtn').addEventListener('click', function() {
      document.getElementById('orgNameInput').disabled = true;
      document.getElementById('orgSlugInput').disabled = true;
      document.getElementById('orgFormActions').classList.add('hidden');
      document.getElementById('editOrgBtn').classList.remove('hidden');
    });

    // Add Member Button
    document.getElementById('addMemberBtn').addEventListener('click', function() {
      document.getElementById('addMemberForm').classList.remove('hidden');
      this.classList.add('hidden');
    });

    document.getElementById('cancelAddMemberBtn').addEventListener('click', function() {
      document.getElementById('addMemberForm').classList.add('hidden');
      document.getElementById('addMemberBtn').classList.remove('hidden');
    });
  </script>
<%end%>
