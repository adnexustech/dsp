<%= form_with(model: @user, local: true, class: "space-y-6") do |f| %>
  <% if @user.errors.any? %>
    <div class="rounded-lg border border-red-900 bg-red-950/50 p-4">
      <div class="flex items-start gap-3">
        <svg class="w-5 h-5 text-red-500 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <div class="flex-1">
          <h3 class="text-sm font-medium text-red-400 mb-2">
            <%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved
          </h3>
          <ul class="text-sm text-red-300 space-y-1">
            <% @user.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  <% end %>

  <div class="space-y-5">
    <div class="space-y-2">
      <%= f.label :name, class: "text-sm font-medium text-gray-200" %>
      <%= f.text_field :name,
          class: "w-full px-4 py-2.5 bg-gray-900 border border-gray-800 rounded-xl text-white text-sm placeholder:text-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all",
          placeholder: "Enter full name" %>
    </div>

    <div class="space-y-2">
      <%= f.label :email, class: "text-sm font-medium text-gray-200" %>
      <%= f.email_field :email,
          class: "w-full px-4 py-2.5 bg-gray-900 border border-gray-800 rounded-xl text-white text-sm placeholder:text-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all",
          placeholder: "user@example.com" %>
    </div>

    <div class="space-y-2">
      <%= f.label :password, class: "text-sm font-medium text-gray-200" %>
      <%= f.password_field :password,
          class: "w-full px-4 py-2.5 bg-gray-900 border border-gray-800 rounded-xl text-white text-sm placeholder:text-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all",
          placeholder: "Enter password" %>
    </div>

    <div class="space-y-2">
      <%= f.label :password_confirmation, "Confirm Password", class: "text-sm font-medium text-gray-200" %>
      <%= f.password_field :password_confirmation,
          class: "w-full px-4 py-2.5 bg-gray-900 border border-gray-800 rounded-xl text-white text-sm placeholder:text-gray-500 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-all",
          placeholder: "Confirm password" %>
    </div>

    <div class="flex items-center space-x-3 pt-2">
      <%= f.check_box :admin,
          class: "w-4 h-4 text-blue-600 bg-gray-900 border-gray-700 rounded focus:ring-blue-500 focus:ring-2 cursor-pointer" %>
      <%= f.label :admin, "Administrator", class: "text-sm font-medium text-gray-200 cursor-pointer" %>
    </div>
  </div>

  <div class="flex items-center gap-3 pt-2">
    <%= f.submit "Create User",
        class: "inline-flex items-center justify-center px-8 py-3 text-sm font-medium text-white bg-blue-600 rounded-xl hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-gray-950 transition-colors cursor-pointer" %>
  </div>
<% end %>
