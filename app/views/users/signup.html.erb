<% content_for :title, "Adnexus - Sign Up" %>

<div class="text-center mb-6">
    <h2 class="text-2xl font-bold text-gray-900 dark:text-white">Create Your Account</h2>
    <p class="mt-2 text-sm text-gray-600 dark:text-gray-400">Start managing your ad campaigns today</p>
</div>

<%= form_with(model: @user, url: signup_path, local: true, class: "space-y-6") do |f| %>

    <% if @user.errors.any? %>
        <div class="bg-red-50 dark:bg-red-900/20 border border-red-200 dark:border-red-800 text-red-800 dark:text-red-200 px-4 py-3 rounded-lg text-sm">
            <h3 class="font-medium mb-2">
                <%= pluralize(@user.errors.count, "error") %> prohibited this account from being created
            </h3>
            <ul class="list-disc list-inside space-y-1">
                <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>

    <div>
        <%= f.label :name, "Full Name", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
        <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <i class="fa fa-user text-gray-400"></i>
            </div>
            <%= f.text_field :name,
                autocomplete: "name",
                required: true,
                placeholder: "John Doe",
                class: "pl-10 block w-full px-3 py-3 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors" %>
        </div>
    </div>

    <div>
        <%= f.label :email, "Email Address", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
        <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <i class="fa fa-envelope text-gray-400"></i>
            </div>
            <%= f.email_field :email,
                autocomplete: "email",
                required: true,
                placeholder: "you@example.com",
                class: "pl-10 block w-full px-3 py-3 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors" %>
        </div>
    </div>

    <div>
        <%= f.label :password, "Password", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
        <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <i class="fa fa-lock text-gray-400"></i>
            </div>
            <%= f.password_field :password,
                autocomplete: "new-password",
                required: true,
                placeholder: "••••••••",
                class: "pl-10 block w-full px-3 py-3 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors" %>
        </div>
    </div>

    <div>
        <%= f.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-gray-700 dark:text-gray-300 mb-2" %>
        <div class="relative">
            <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                <i class="fa fa-lock text-gray-400"></i>
            </div>
            <%= f.password_field :password_confirmation,
                autocomplete: "new-password",
                required: true,
                placeholder: "••••••••",
                class: "pl-10 block w-full px-3 py-3 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-gray-100 placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-transparent transition-colors" %>
        </div>
    </div>

    <div>
        <%= f.submit "Create Account",
            class: "w-full flex justify-center py-3 px-4 border border-transparent rounded-lg shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500 transition-colors duration-150" %>
    </div>

    <div class="text-center text-sm text-gray-600 dark:text-gray-400">
        Already have an account?
        <%= link_to "Sign in", login_path, class: "font-medium text-blue-600 dark:text-blue-400 hover:text-blue-500 dark:hover:text-blue-300 transition-colors" %>
    </div>

<% end %>
