<% content_for :breadcrumb do %>
<div class="page-header pull-left">
  <div class="page-title">Account Overview</div>
</div>
<ol class="breadcrumb page-breadcrumb pull-right">
  <li><i class="fa fa-home"></i>&nbsp;<a href="/">Home</a>&nbsp;&nbsp;<i class="fa fa-angle-right"></i>&nbsp;&nbsp;</li>
  <li class="active">My Account</li>
</ol>
<%end%>

<% content_for :main_body do %>
<div class="page-content">
  <!-- Quick Stats -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-6 mb-8">
    <div class="stat-card">
      <div class="flex items-center justify-between mb-2">
        <span class="text-gray-400 text-sm font-medium">Credits Balance</span>
        <i class="fa fa-dollar text-green-500 text-xl"></i>
      </div>
      <div class="stat-value text-green-500">$<%= '%.2f' % @user.credits_balance %></div>
      <a href="<%= new_credit_path %>" class="text-green-500 hover:text-green-400 text-xs mt-2 inline-block">Add Credits →</a>
    </div>

    <div class="stat-card">
      <div class="flex items-center justify-between mb-2">
        <span class="text-gray-400 text-sm font-medium">Subscription</span>
        <i class="fa fa-credit-card text-blue-500 text-xl"></i>
      </div>
      <div class="stat-value"><%= @user.subscription_plan&.titleize || 'Free' %></div>
      <% if @user.active_subscription? %>
        <span class="text-green-500 text-xs mt-2 inline-block">● Active</span>
      <% else %>
        <a href="<%= new_subscription_path %>" class="text-blue-500 hover:text-blue-400 text-xs mt-2 inline-block">Upgrade →</a>
      <% end %>
    </div>

    <div class="stat-card">
      <div class="flex items-center justify-between mb-2">
        <span class="text-gray-400 text-sm font-medium">Active Campaigns</span>
        <i class="fa fa-bullhorn text-purple-500 text-xl"></i>
      </div>
      <div class="stat-value"><%= Campaign.count %></div>
      <a href="<%= campaigns_path %>" class="text-gray-400 hover:text-gray-300 text-xs mt-2 inline-block">View All →</a>
    </div>

    <div class="stat-card">
      <div class="flex items-center justify-between mb-2">
        <span class="text-gray-400 text-sm font-medium">Member Since</span>
        <i class="fa fa-calendar text-gray-500 text-xl"></i>
      </div>
      <div class="text-2xl font-bold text-white"><%= @user.created_at.strftime('%b %Y') %></div>
      <p class="text-gray-500 text-xs mt-2">Active account</p>
    </div>
  </div>

  <!-- Main Content Grid -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
    <!-- Profile Information -->
    <div class="card">
      <div class="flex items-center justify-between mb-6">
        <h2 class="text-xl font-semibold text-white flex items-center">
          <i class="fa fa-user text-gray-400 mr-3"></i>
          Profile Information
        </h2>
        <button onclick="document.getElementById('editProfileModal').classList.remove('hidden')" class="text-sm text-blue-500 hover:text-blue-400">
          <i class="fa fa-pencil"></i> Edit
        </button>
      </div>

      <div class="space-y-4">
        <div class="flex justify-between border-b border-gray-800 pb-3">
          <span class="text-gray-400">Name</span>
          <span class="text-white font-medium"><%= @user.name %></span>
        </div>
        <div class="flex justify-between border-b border-gray-800 pb-3">
          <span class="text-gray-400">Email</span>
          <span class="text-white"><%= @user.email %></span>
        </div>
        <div class="flex justify-between border-b border-gray-800 pb-3">
          <span class="text-gray-400">Member Since</span>
          <span class="text-white"><%= @user.created_at.strftime('%B %d, %Y') %></span>
        </div>
        <div class="flex justify-between">
          <span class="text-gray-400">Account Type</span>
          <% if @user.admin %>
            <span class="px-2 py-1 bg-red-900 text-red-200 text-xs rounded">Administrator</span>
          <% else %>
            <span class="px-2 py-1 bg-blue-900 text-blue-200 text-xs rounded">User</span>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Quick Links -->
    <div class="card">
      <h2 class="text-xl font-semibold text-white mb-6 flex items-center">
        <i class="fa fa-link text-gray-400 mr-3"></i>
        Quick Links
      </h2>

      <div class="space-y-2">
        <a href="<%= credits_path %>" class="flex items-center justify-between p-3 rounded-lg hover:bg-gray-900 transition-colors">
          <div class="flex items-center">
            <i class="fa fa-dollar text-green-500 w-8"></i>
            <span class="text-white">Credits & Wallet</span>
          </div>
          <div class="flex items-center">
            <span class="text-green-500 font-medium mr-2">$<%= '%.2f' % @user.credits_balance %></span>
            <i class="fa fa-chevron-right text-gray-600"></i>
          </div>
        </a>

        <a href="<%= subscriptions_path %>" class="flex items-center justify-between p-3 rounded-lg hover:bg-gray-900 transition-colors">
          <div class="flex items-center">
            <i class="fa fa-credit-card text-blue-500 w-8"></i>
            <span class="text-white">Subscription & Billing</span>
          </div>
          <div class="flex items-center">
            <span class="px-2 py-1 bg-blue-900 text-blue-200 text-xs rounded mr-2"><%= @user.subscription_plan&.titleize || 'Free' %></span>
            <i class="fa fa-chevron-right text-gray-600"></i>
          </div>
        </a>

        <a href="<%= invoices_path %>" class="flex items-center justify-between p-3 rounded-lg hover:bg-gray-900 transition-colors">
          <div class="flex items-center">
            <i class="fa fa-file-text text-gray-400 w-8"></i>
            <span class="text-white">Invoices & Receipts</span>
          </div>
          <i class="fa fa-chevron-right text-gray-600"></i>
        </a>

        <% if @user.stripe_customer_id %>
          <a href="<%= portal_subscriptions_path %>" class="flex items-center justify-between p-3 rounded-lg hover:bg-gray-900 transition-colors">
            <div class="flex items-center">
              <i class="fa fa-cog text-yellow-500 w-8"></i>
              <span class="text-white">Manage Payment Methods</span>
            </div>
            <i class="fa fa-external-link text-gray-600"></i>
          </a>
        <% end %>

        <a href="<%= campaigns_path %>" class="flex items-center justify-between p-3 rounded-lg hover:bg-gray-900 transition-colors">
          <div class="flex items-center">
            <i class="fa fa-bullhorn text-red-500 w-8"></i>
            <span class="text-white">My Campaigns</span>
          </div>
          <div class="flex items-center">
            <span class="px-2 py-1 bg-gray-800 text-gray-300 text-xs rounded mr-2"><%= Campaign.count %></span>
            <i class="fa fa-chevron-right text-gray-600"></i>
          </div>
        </a>

        <a href="<%= banners_path %>" class="flex items-center justify-between p-3 rounded-lg hover:bg-gray-900 transition-colors">
          <div class="flex items-center">
            <i class="fa fa-image text-purple-500 w-8"></i>
            <span class="text-white">My Banners</span>
          </div>
          <i class="fa fa-chevron-right text-gray-600"></i>
        </a>
      </div>
    </div>
  </div>

  <!-- Recent Activity -->
  <div class="card">
    <h2 class="text-xl font-semibold text-white mb-6 flex items-center">
      <i class="fa fa-history text-gray-400 mr-3"></i>
      Recent Activity
    </h2>

    <% recent_transactions = @user.credit_transactions.recent.limit(5) %>
    <% if recent_transactions.any? %>
      <div class="overflow-x-auto">
        <table class="w-full">
          <thead>
            <tr class="border-b border-gray-800">
              <th class="text-left text-gray-400 font-medium pb-3">Date</th>
              <th class="text-left text-gray-400 font-medium pb-3">Type</th>
              <th class="text-left text-gray-400 font-medium pb-3">Description</th>
              <th class="text-right text-gray-400 font-medium pb-3">Amount</th>
            </tr>
          </thead>
          <tbody>
            <% recent_transactions.each do |tx| %>
              <tr class="border-b border-gray-900">
                <td class="py-3 text-gray-300"><%= tx.created_at.strftime('%b %d, %Y %I:%M %p') %></td>
                <td class="py-3">
                  <span class="px-2 py-1 <%= tx.credit? ? 'bg-green-900 text-green-200' : 'bg-red-900 text-red-200' %> text-xs rounded">
                    <%= tx.transaction_type.titleize %>
                  </span>
                </td>
                <td class="py-3 text-gray-300"><%= tx.description %></td>
                <td class="py-3 text-right <%= tx.credit? ? 'text-green-500' : 'text-red-500' %> font-medium">
                  <%= tx.signed_amount %>
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <div class="mt-4">
        <a href="<%= credits_path %>" class="text-blue-500 hover:text-blue-400 text-sm">View All Transactions →</a>
      </div>
    <% else %>
      <p class="text-gray-500 text-center py-8">No recent activity</p>
    <% end %>
  </div>
</div>

<!-- Edit Profile Modal -->
<div id="editProfileModal" class="hidden fixed inset-0 bg-black bg-opacity-50 flex items-center justify-center z-50">
  <div class="bg-gray-950 border border-gray-800 rounded-lg p-6 w-full max-w-md">
    <div class="flex justify-between items-center mb-4">
      <h3 class="text-xl font-semibold text-white">Edit Profile</h3>
      <button onclick="document.getElementById('editProfileModal').classList.add('hidden')" class="text-gray-400 hover:text-white">
        <i class="fa fa-times"></i>
      </button>
    </div>

    <%= form_with model: @user, url: myaccountUpdate_path, method: :patch, local: true, class: 'space-y-4' do |f| %>
      <div>
        <%= f.label :name, class: 'block text-gray-400 text-sm mb-2' %>
        <%= f.text_field :name, class: 'w-full bg-gray-900 border border-gray-800 rounded-lg px-4 py-2 text-white focus:border-blue-500 focus:outline-none', required: true %>
      </div>

      <div>
        <%= f.label :email, class: 'block text-gray-400 text-sm mb-2' %>
        <%= f.email_field :email, class: 'w-full bg-gray-900 border border-gray-800 rounded-lg px-4 py-2 text-white focus:border-blue-500 focus:outline-none', required: true %>
      </div>

      <div class="border-t border-gray-800 pt-4">
        <p class="text-gray-500 text-sm mb-4">Leave password fields blank to keep current password</p>

        <div class="mb-4">
          <%= f.label :password, 'New Password', class: 'block text-gray-400 text-sm mb-2' %>
          <%= f.password_field :password, class: 'w-full bg-gray-900 border border-gray-800 rounded-lg px-4 py-2 text-white focus:border-blue-500 focus:outline-none', placeholder: 'Leave blank to keep current' %>
        </div>

        <div>
          <%= f.label :password_confirmation, class: 'block text-gray-400 text-sm mb-2' %>
          <%= f.password_field :password_confirmation, class: 'w-full bg-gray-900 border border-gray-800 rounded-lg px-4 py-2 text-white focus:border-blue-500 focus:outline-none' %>
        </div>
      </div>

      <div class="flex gap-3 pt-4">
        <button type="button" onclick="document.getElementById('editProfileModal').classList.add('hidden')" class="flex-1 px-4 py-2 bg-gray-800 hover:bg-gray-700 text-white rounded-lg transition-colors">
          Cancel
        </button>
        <%= f.submit 'Update Profile', class: 'flex-1 px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white rounded-lg transition-colors cursor-pointer' %>
      </div>
    <% end %>
  </div>
</div>
<%end%>
