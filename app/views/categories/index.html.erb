<% content_for :breadcrumb do %>
  <div class="page-title-left">
    <ol class="breadcrumb page-breadcrumb">
      <li><i class="fa fa-home"></i><a href="/">Home</a></li>
      <li><i class="fa fa-angle-right"></i></li>
      <li class="active">Categories</li>
    </ol>
    <div class="page-header">
      <div class="page-title">Categories</div>
    </div>
  </div>
  <div class="page-actions">
    <%= link_to 'New Category', new_category_path, class: "btn btn-primary" %>
  </div>
<%end%>

<% content_for :main_body do %>

      <table class="table table-striped table-hover ">
        <thead>
          <tr >
            <th>Category Name</th>
            <th>Assigned Documents</th>
            <th colspan="2" width="10%"></th>
          </tr>
        </thead>
        <tbody>
          <% @categories.each do |category| %>
            <tr>
              <td><%=category.name%></td>
              <td>
                 <% category.documents.each do |document| %>
                    <%= link_to document.name, edit_document_path(document)%>
                  <%end%>
              </td>
              <td><%= link_to 'Edit', edit_category_path(category) %></td>
              <td><%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
      
      <br>
      
      <%= link_to 'New Category', new_category_path  , class:"btn btn-default btn-sm" %>
      
<%end%>