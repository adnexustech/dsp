<script>
  function copyAffiliateLink(inputId) {
    const input = document.getElementById(inputId);
    input.select();
    input.setSelectionRange(0, 99999);

    navigator.clipboard.writeText(input.value).then(function() {
      const button = event.target.closest('button');
      const originalHTML = button.innerHTML;
      
      button.innerHTML = '<i class="fa-solid fa-check"></i>';
      button.classList.add('bg-green-600', 'hover:bg-green-700');
      button.classList.remove('bg-green-600', 'hover:bg-green-700');
      
      setTimeout(function() {
        button.innerHTML = originalHTML;
      }, 2000);
    });
  }

  function generateCustomLink() {
    const campaign = document.getElementById('campaignName').value;
    const source = document.getElementById('campaignSource').value;
    
    if (!campaign || !source) {
      alert('Please fill in both campaign name and source');
      return;
    }
    
    const userId = <%= current_user.id %>;
    const link = `https://adnexus.com?aff=${userId}&campaign=${encodeURIComponent(campaign)}&source=${encodeURIComponent(source)}`;
    
    document.getElementById('customLink').value = link;
    document.getElementById('customLinkResult').classList.remove('hidden');
  }
</script>
